@code {
    private bool isProcessing = false;
    private string? errorMessage;
    private ProcessResponseDto? apiResult;
    private bool isTranscriptVisible = false;
    private string activeTab = "file";
    private string youtubeUrl = "";
    private IBrowserFile? selectedFile;
    private AnalysisPreferences preferences = new AnalysisPreferences();

    // CORS destekleyen Piped API Listesi (Frontend'den erişilebilir)
    private readonly string[] pipedInstances = new[]
    {
        "https://pipedapi.kavin.rocks",      // Ana sunucu
        "https://api.piped.otter.sh",        // Çok hızlı
        "https://pipedapi.drgns.space",
        "https://pa.il.ax",
        "https://pipedapi.smnz.de"
    };

    private void HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = null;
    }

    private async Task SubmitFileAnalysis()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file first.";
            return;
        }
        await UploadFileToBackend(selectedFile.OpenReadStream(500L * 1024 * 1024), selectedFile.Name, selectedFile.ContentType);
    }

    // YOUTUBE İŞLEMİ (TAMAMEN CLIENT-SIDE)
    private async Task HandleYoutubeSubmit()
    {
        if (string.IsNullOrWhiteSpace(youtubeUrl))
        {
            errorMessage = "Please enter a valid YouTube URL.";
            return;
        }

        isProcessing = true;
        errorMessage = null;
        apiResult = null;
        isTranscriptVisible = false;

        try
        {
            // 1. Video ID'sini bul
            string videoId = ExtractVideoId(youtubeUrl);
            if (string.IsNullOrEmpty(videoId)) throw new Exception("Geçersiz YouTube linki.");

            // 2. Piped API'den ses linkini bul (Tarayıcıdan istek atıyoruz)
            string? downloadUrl = await GetStreamUrlFromFrontend(videoId);

            if (string.IsNullOrEmpty(downloadUrl))
                throw new Exception("Video kaynağı bulunamadı veya erişilemiyor.");

            // 3. Dosyayı indir (Browser Memory)
            var audioBytes = await Http.GetByteArrayAsync(downloadUrl);
            var memoryStream = new MemoryStream(audioBytes);

            // 4. Backend'e yükle ve işle
            await UploadFileToBackend(memoryStream, "youtube_audio.mp3", "audio/mpeg");

        }
        catch (Exception ex)
        {
            errorMessage = $"İşlem Hatası: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    // Frontend'den Piped API'ye istek atan metot
    private async Task<string?> GetStreamUrlFromFrontend(string videoId)
    {
        foreach (var instance in pipedInstances)
        {
            try
            {
                // Piped API: /streams/{videoId}
                var apiUrl = $"{instance}/streams/{videoId}";

                // Blazor HttpClient ile istek at (Tarayıcı fetch kullanır)
                var streamInfo = await Http.GetFromJsonAsync<JsonElement>(apiUrl);

                // JSON'dan audioStreams dizisini bul
                if (streamInfo.TryGetProperty("audioStreams", out var audioStreams))
                {
                    foreach (var stream in audioStreams.EnumerateArray())
                    {
                        // M4A veya MP3 formatını bul
                        if (stream.TryGetProperty("url", out var urlEl))
                        {
                            // İlk bulduğumuz ses dosyasını alıyoruz (Genelde en kalitelisi ilki olur)
                            return urlEl.GetString();
                        }
                    }
                }
            }
            catch
            {
                // Bu sunucu CORS hatası verirse veya çökmüşse diğerini dene
                continue;
            }
        }
        return null;
    }

    private string ExtractVideoId(string url)
    {
        try
        {
            var uri = new Uri(url);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            if (query.AllKeys.Contains("v")) return query["v"];
            if (uri.Host.Contains("youtu.be")) return uri.AbsolutePath.Trim('/');
        }
        catch { }
        return null;
    }

    // Ortak Upload Metodu
    private async Task UploadFileToBackend(Stream fileStream, string fileName, string contentType)
    {
        isProcessing = true;
        try
        {
            using var content = new MultipartFormDataContent();
            var streamContent = new StreamContent(fileStream);
            streamContent.Headers.ContentType = new MediaTypeHeaderValue(contentType);

            content.Add(streamContent, "file", fileName);

            var url = $"api/AudioProcess/upload?" +
                      $"language={preferences.Language}&" +
                      $"sourceType={preferences.SourceType}&" +
                      $"style={preferences.SummaryStyle}&" +
                      $"includeQuiz={preferences.IncludeQuiz}&" +
                      $"qCount={preferences.QuestionCount}";

            var response = await Http.PostAsync(url, content);

            if (response.IsSuccessStatusCode)
            {
                apiResult = await response.Content.ReadFromJsonAsync<ProcessResponseDto>();
                await TriggerMathJax();
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error: {response.StatusCode} - {errorMsg}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Upload Error: {ex.Message}";
        }
    }

    private async Task TriggerMathJax()
    {
        StateHasChanged();
        await Task.Delay(100);
        await JSRuntime.InvokeVoidAsync("renderMath");
    }

    private void ToggleTranscript() => isTranscriptVisible = !isTranscriptVisible;

    private string ConvertMarkdownToHtml(string markdown)
    {
        if (string.IsNullOrEmpty(markdown)) return "";
        var pipeline = new MarkdownPipelineBuilder().UseAdvancedExtensions().Build();
        return Markdown.ToHtml(markdown, pipeline);
